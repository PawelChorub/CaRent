@model CarViewModel

<div class="row orderForm">
    <form asp-controller="Car" asp-action="Create" method="post" class="form-horizontal" role="form">
        <h3 class="col-md-offset-2">Utwórz nowy samochód</h3>


        <div class="form-group">
            <label asp-for="Car.CarMark" class="col-md-2 control-label">Marka</label>
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.Car.CarMarkId,
                                       new SelectList(Model.CarMarks.Select(x => new { Value = x.CarMarkId, Text = x.Name }), "Value", "Text"), "Wybierz markę",
                                       htmlAttributes: new { @class = "form-control border-input" })
                <span asp-validation-for="Car.CarMark" class="text-danger"></span>
            </div>

            <div class="col-md-2">
                <a class="btn btn-success" style="width:100%" asp-controller="CarMark" asp-action="Create">Utwórz nową markę</a>
            </div>

        </div>
        <div class="form-group">
            <label asp-for="Car.CarModel" class="col-md-2 control-label">Model</label>
            <div class="col-md-6">
                <input asp-for="Car.CarModel" class="form-control" placeholder="Wpisz nazwę modelu" />
                <span asp-validation-for="Car.CarModel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Wróć" asp-controller="Car" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Utwórz" />
            </div>
        </div>
    </form>
</div>
