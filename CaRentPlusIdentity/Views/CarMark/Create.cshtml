@model CreateCarMarkViewModel



<div class="row orderForm">
    <form asp-controller="CarMark" asp-action="Create" method="post" class="form-horizontal" role="form">
        @Html.HiddenFor(x => x.Referer)
        <h3 class="col-md-offset-2">Utwórz nową markę</h3>
        <div class="form-group">
            <label asp-for="CarMark.Name" class="col-md-2 control-label">Marka</label>
            <div class="col-md-6">
                <input asp-for="CarMark.Name" class="form-control" placeholder="Podaj nazwę marki" />
                <span asp-validation-for="CarMark.Name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="btn-group col-md-offset-2 col-md-6">
                <input class="btn btn-default" type="submit" value="Wróć" asp-controller="CarMark" asp-action="List" />
                <input class="btn btn-success" type="submit" value="Utwórz" />
            </div>
        </div>
    </form>
</div>